  <body>
    
 <!--  --- navbar ---  -->
 <%- include('navbar'); %>



  <!-- tickets -->
        <div class="container col-12 col-sm-6 text-center">
            <div class="rowtravel">
              <h4 style="color:white">My last trips</h4>


                <table class="table" style="background-color: white;">
                    <thead>
                      <tr>
                        <th scope="col">Date</th>
                        <th scope="col">Journey</th>
                        <th scope="col">Departure time</th>
                        <th scope="col">Price</th>
                      </tr>
                    </thead>
                    <tbody>

                        <%
                            for(var i =0; i<user.trips.length; i++){

                          %>  
                      <tr>
                        <td><%=dateFormat(user.trips[i].date)%></td>
                        <td><%=user.trips[i].journeydeparture%> / <%=user.trips[i].journeyarrival%> </td>
                        <td><%=user.trips[i].departureTime%></td>
                        <td><%=user.trips[i].price%>â‚¬</td>
                      </tr>
                      
                    <%
                    }
                    %>

                    </tbody>
                </table>
                    <div class="btn">
                        <button type="submit" class="btn btn-danger"><a style="color:white" href="/homepage">Home</a></button>
                    </div>
            </div>
        </div>

      

