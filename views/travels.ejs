<!DOCTYPE html>
<html>
  <head>
    <title>tickets</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css'/>
  </head>
  <body>
    
 <!--  --- navbar ---  -->
 <%- include('navbar'); %>



  <!-- tickets -->
        <div class="container col-12 col-sm-6 text-center">
            <div class="rowtravel">
              <h4 style="color:white">My tickets</h4>


                <table class="table" style="background-color: white;">
                    <thead>
                      <tr>
                        <th scope="col">N°</th>
                        <th scope="col">Journey</th>
                        <th scope="col">Date</th>
                        <th scope="col">Departure time</th>
                        <th scope="col">Price</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody>


                <%
                    var totalCmd = 0;
                    for(var i = 0; i<travels.length;  i++){

                %>
                      <tr>
                        <th scope="row">1</th>
                        <td><%=travels[i].departure%> / <%=travels[i].arrival%></td>
                        <td><%=dateFormat(travels[i].date)%></td>
                        <td><%=travels[i].heure%></td>
                        <td><%=travels[i].prix%>€</td>
                        <td><a href="/delete-travels?position=<%=[i]%>"><button class="btn btn-outline-info btn-sm" name="button"><i class="far fa-trash-alt"></i></button></a></td>
                      </tr>

                     <% totalCmd = totalCmd + parseInt(travels[i].prix)%>
                 <%
                }
                %>
                      <tr style="background-color: #fe9090;">
                        <th>Total</th>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td><%=totalCmd%>€</td>
                        <td></td>
                      </tr>
                    </tbody>
                </table>
                    <div class="btn">
                        <button type="submit" class="btn btn-danger"><a style="color:white" href="/lasttrips?add=add">Confirm</a></button>
                    </div>

                    



            </div>
        </div>

      

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>

</html>
