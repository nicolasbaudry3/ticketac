        <div class="row homepage">
          
            
                <div class="col-12 text-center">
                  
                    <h4 class="col-12 titleForm">One-Way Ticket :</h4>

                    <form class="titleForm" action="/tickets" method="POST">
                      <div class="cool-12 col-md-3 form-group">
                        <input name="departureFromFront" type="text" class=" form-control" aria-describedby="emailHelp" placeholder="From: Paris, Marseille ...">
                      </div>
                      <div class="col-12 col-md-3 form-group">
                        <input name="arrivalFromFront" type="text" class="form-control" placeholder="To: Lille, Nantes ...">
                      </div>
                      <div class="col-12 col-md-3 form-group">
                        <input type="date" id="date" name="dateFromFront" class="form-control" value="2018-11-01" min="2018-11-01" max="2018-11-30">
                      </div>
                      <button type="submit" class="btn btn-danger GoHome">Go</button>
                    </form>

                 

                </div>
         
